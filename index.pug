<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
    link(rel="stylesheet", href="https://unpkg.com/swiper/css/swiper.min.css")
    link(rel="stylesheet", href="css/style.css")
  body
    // Swiper
    .swiper-container
      .swiper-wrapper
        .swiper-slide.border Slide 1
        .swiper-slide.border Slide 2
        .swiper-slide.border Slide 3
        .swiper-slide.border Slide 4
        .swiper-slide.border Slide 5
        .swiper-slide.border Slide 6
        .swiper-slide.border Slide 7
        .swiper-slide.border Slide 8
        .swiper-slide.border Slide 9
        .swiper-slide.border Slide 10

    script(src="https://unpkg.com/swiper/js/swiper.min.js")
    script.
      var swiper = new Swiper('.swiper-container', {
        //- loop: true,
        centeredSlides: true,
        grabCursor: true,
        slidesPerView: 2,
        spaceBetween: 20,
        breakpoints: {
        768: {
          slidesPerView: 3,
          spaceBetween: 30,
          centeredSlides: true,
        },
        992: {
          slidesPerView: 4,
          spaceBetween: 50,
          centeredSlides: true,
        },
      }
      });